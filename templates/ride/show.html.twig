{% extends 'base.html.twig' %}

{% block title %}Ride{% endblock %}

{% block body %}
    <h1>Ride</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ ride.id }}</td>
            </tr>
            <tr>
                <th>Pick_up_time</th>
                <td>{{ ride.pickUpTime ? ride.pickUpTime|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Pick_up_from</th>
                <td>{{ ride.pickUpFrom }}</td>
            </tr>
            <tr>
                <th>Drop_to</th>
                <td>{{ ride.dropTo }}</td>
            </tr>
            <tr>
                <th>Type_ride</th>
                <td>{{ ride.typeRide }}</td>
            </tr>
            <tr>
                <th>Amount</th>
                <td>{{ ride.amount }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('ride_index') }}">back to list</a>

    <a href="{{ path('ride_edit', {'id': ride.id}) }}">edit</a>

    {{ include('ride/_delete_form.html.twig') }}
{% endblock %}
